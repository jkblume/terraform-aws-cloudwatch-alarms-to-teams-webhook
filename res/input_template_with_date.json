{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "type": "AdaptiveCard",
        "version": "1.4",
        "body": [
          {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "<state>: <alarmName>"
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "width": "auto",
                "items": [
                  {
                    "type": "Image",
                    "style": "Person",
                    "url": "https://family-dashboard.s3.eu-central-1.amazonaws.com/<state>.png",
                    "altText": "State Image",
                    "size": "Small"
                  }
                ]
              },
              {
                "type": "Column",
                "items": [
                  {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "Aktueller Status: <state>",
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "text": "<description>",
                    "isSubtle": true,
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "spacing": "None",
                    "text": "Aktueller Status: {{DATE(<timestamp>,SHORT)}}",
                    "isSubtle": true,
                    "wrap": true
                  },
                  {
                    "type": "TextBlock",
                    "spacing": "None",
                    "text": "Letzter Status: {{DATE(<previousTimestamp>,SHORT)}}",
                    "isSubtle": true,
                    "wrap": true
                  }
                ],
                "width": "stretch"
              }
            ]
          },
          {
            "type": "ActionSet",
            "actions": [
              {
                "type": "Action.OpenUrl",
                "title": "AWS Login",
                "url": "https://huk-coburg.awsapps.com/start/"
              },
              {
                "type": "Action.OpenUrl",
                "title": "Zum Cloudwatch Alarm",
                "url": "https://console.aws.amazon.com/cloudwatch/home?region=<region>#alarmsV2:alarm/<alarmName>"
              }
            ]
          }
        ]
      }
    }
  ]
}